<% if @appointments.present? %>
<table class="hover">
  <thead>
    <tr>
      <td>Title</td>
      <td>Date</td>
      <td>Create at</td>
      <td>Update</td>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |appointment| %>
    <tr>
      <td><%= appointment.title %></td>
      <td><%= appointment.date %></td>
      <td><%= appointment.created_at %></td>
      <td>
        <%= link_to 'See info' ,user_appointment_path(@user, appointment)%>
        <% if @current_user.admin? %>
        |
        <%= link_to 'Edit Appointment',edit_user_appointment_path(@user, appointment)%>
        |
        <%= link_to 'Delete Appointment',user_appointment_path(@user, appointment),
       method: :delete, class: "delete-item" %></td>
       <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%end %>
